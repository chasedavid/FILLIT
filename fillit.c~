#include "libft.h" 
#include <stdio.h>

char **makemap(int n)
{

	char **map;
	int i;
	int j;
	
	i = 0;
	map = (char**)malloc((n + 1) * sizeof(char*)); 
	if (map == 0)
		return(0);
	map[n + 1] = 0;
	while (i < n)
	{
		map[i] = ft_memalloc(n);
		j = 0; 
		while (j < n)
			map[i][j++] = '.';
		i++;
	}

/*
	int maplen;
	int i; 
	
	i = 0;
	maplen = (n * n) + n + 1;
	map = ft_memalloc(maplen);
	map[maplen] = '\0';
	while (i < (maplen - 1))
	{
		if (((i + 1) % (n + 1)) == 0 ) 
			map[i] = '\n';
		else
			map[i] = '.';
		i++;
	}
*/

	return (map); 
}


